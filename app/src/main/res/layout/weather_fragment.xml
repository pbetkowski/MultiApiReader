<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/layout_border"
                android:layout_height="wrap_content">

    <GridLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2">
        <GridLayout android:layout_width="wrap_content"
                    android:rowCount="2"
                    android:columnCount="1"
                      android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="90dp"
                    android:layout_row="0"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/imageView2"
                    app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                    tools:ignore="VectorDrawableCompat"/>

            <ImageView
                    android:layout_width="50dp"

                    android:layout_height="90dp"
                    android:layout_row="1"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/imageView3"
                    app:srcCompat="@drawable/ic_cloud_black_24dp"
                    tools:ignore="VectorDrawableCompat"/>

        </GridLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_column="1"
                android:id="@+id/main">


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/timeText"
                      android:text="Warunki atmosferyczne"
                      android:layout_marginLeft="40dp"
                      android:textSize="20dp"
                      android:gravity="left"
                      android:textColor="#18FFFF"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:id="@+id/temp1"
                      android:layout_below="@+id/timeText"
                      android:text="asd"
                      android:layout_marginLeft="40dp"
                      android:textSize="40dp"
                      android:gravity="left"
                      android:textColor="#18FFFF"
            />

            <TextView android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:id="@+id/temp2"
                      android:layout_below="@+id/temp1"
                      android:layout_marginLeft="40dp"
                      android:text="asd"
                      android:layout_marginTop="30dp"
                      android:textSize="40dp"
                      android:gravity="left"
                      android:textColor="#18FFFF"
            />


        </RelativeLayout>

    </GridLayout>


</RelativeLayout>

